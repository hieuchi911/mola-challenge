{
    "manifest_version": 2,
    "name": "Sentiment",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "icons": {
      "16": "images/smile.png"
    },
    "content_scripts": [
      {
        "js": [
          "scripts/content.js"
        ],
        "matches": [
          "https://twitter.com/home"
        ]
      }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'" 
  }